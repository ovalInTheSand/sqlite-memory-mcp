# Central settings for SQLite Memory MCP

# Keep the DB on Linux-side in WSL for performance.
CLAUDE_MEMORY_DB="$HOME/.claude/memory/claude_memory.db"

# Name as Claude sees the server
MCP_SERVER_NAME="sqlite_memory"

# PRAGMAs (applied at bootstrap)
BUSY_TIMEOUT_MS=30000
CACHE_SIZE_KIB=65536          # negative => KiB page cache
MMAP_SIZE_BYTES=268435456     # 256 MiB mapped read window
SYNCHRONOUS_LEVEL="NORMAL"    # good tradeoff in WAL mode
ENABLE_WAL="1"                # WAL is persistent on the DB

# Permissions policy (for user settings template)
ALLOW_WRITES="0"
